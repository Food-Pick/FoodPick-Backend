{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "watchOptions": {
    "watchExclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts",
      ".git"
    ],
    "watchAssets": true,
    "watchFileIgnorePattern": ".*\\.git/.*|.*\\.js$|.*\\.map$|pgdata/.*"
  }
}
